<%= form_for(@application, :html => {class: 'ui form', role: 'form'}) do |f| %>
    <h4 class="ui dividing header">Application Information</h4>
    <div class="field">
        <%= f.label "Name" %>
        <div class="field">
            <%= f.text_field :name, placeholder: 'Enter name of the application...'%>
        </div>
    </div>
    <div class="field">
        <%= f.label "Description" %>
        <div class="field">
            <%= f.text_field :description, placeholder: 'Enter a description of the application'%>
        </div>
    </div>
    <div class="ui buttons">
        <% if @application.new_record? %>
            <%= link_to "Cancel", applications_path, class: "ui button" %>
        <% else %>
            <%= link_to "Cancel", application_path(@application), class: "ui button" %>
        <% end %>
        <div class="or"></div>
        <%= f.submit(@application.new_record? ? "Add Application" : "Update Application", class: "ui positive button") %>
    </div>
<% end %>