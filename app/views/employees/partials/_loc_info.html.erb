<table class="ui striped selectable celled table">
    <thead>
      <tr>
        <th>Location Name</th>
        <th>Street Address</th>
        <th>Suite</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
      </tr>
    </thead>
    <tbody>
      <% @employee.locations.each do |loc| %>
        <tr>
          <td><%= loc.name.capitalize %></td>
          <td><%= loc.streetAddress.capitalize %></td>
          <td><%= loc.suite %></td>
          <td><%= loc.city %></td>
          <td><%= loc.state %></td>
          <td><%= loc.zipCode %></td>
        </tr>
      <% end %>
    </tbody>
</table>